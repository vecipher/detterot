{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cargo: build game (debug)",
      "type": "shell",
      "command": "cargo build -p game --features dev",
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": [
        {
          "owner": "rust",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": [
            {
              "regexp": "^(error|warning)(\\[(E\\d+)\\])?:\\s+(.*)$",
              "severity": 1,
              "code": 3,
              "message": 4
            },
            {
              "regexp": "^\\s*-->\\s([^:]+):(\\d+):(\\d+)",
              "file": 1,
              "line": 2,
              "column": 3
            }
          ]
        }
      ]
    },
    {
      "label": "cargo: build game (release)",
      "type": "shell",
      "command": "cargo build -p game --release",
      "problemMatcher": [
        {
          "owner": "rust",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": [
            {
              "regexp": "^(error|warning)(\\[(E\\d+)\\])?:\\s+(.*)$",
              "severity": 1,
              "code": 3,
              "message": 4
            },
            {
              "regexp": "^\\s*-->\\s([^:]+):(\\d+):(\\d+)",
              "file": 1,
              "line": 2,
              "column": 3
            }
          ]
        }
      ]
    },
    {
      "label": "cargo: run game",
      "type": "shell",
      "command": "cargo run -p game --features dev",
      "problemMatcher": [
        {
          "owner": "rust",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": [
            {
              "regexp": "^(error|warning)(\\[(E\\d+)\\])?:\\s+(.*)$",
              "severity": 1,
              "code": 3,
              "message": 4
            },
            {
              "regexp": "^\\s*-->\\s([^:]+):(\\d+):(\\d+)",
              "file": 1,
              "line": 2,
              "column": 3
            }
          ]
        }
      ]
    },
    {
      "label": "cargo: clean",
      "type": "shell",
      "command": "cargo clean",
      "presentation": { "reveal": "always", "panel": "shared" }
    },
    {
      "label": "repo: size snapshot",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "set -o pipefail; du -sh target .git 2>/dev/null; printf '\\nLargest dSYM bundles (top 10):\\n'; find target -maxdepth 5 -type d -name '*.dSYM' -print0 2>/dev/null | xargs -0 du -sh 2>/dev/null | sort -hr | head -n 10"
      ],
      "presentation": { "reveal": "always", "panel": "shared" }
    }
  ]
}
